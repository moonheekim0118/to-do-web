<%- include('../includes/head.ejs') %>
<title><%= pageTitle%></title>
</head>
<body>
    <div class="form-container">
    <div id="goToIndex">
        <a href="/">TO DO</a>
    </div>
    <p id="message">Let's make your day 👌🏻</p>
    <form action="/signIn" method="POST" id="form-container">
        <div class="form-control">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="Enter Email" value=<%=oldInput.email %>>
            <small>Error Message</small>
        </div>
        <!-- <div class="form-control" >
            <label for="name">Name</label>
            <input type="text" name="name" id="name" placeholder="Enter Name" >
            <small>Error Message</small>
        </div> -->
        <div class="form-control">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="Enter Password" value=<%=oldInput.password %>>
            <small>Error Message</small>
        </div>
        <% if(ErrorMessage.length >0) {%>
            <div id='errorMessage'><%=ErrorMessage%></div>
            <% } %>
        <div class="form-control">
            <input  type="hidden"  name="_csrf"  value="<%= csrfToken%>"  >
            <input type="submit" value="Submit" class="submit">
        </div>
      <div class="moveto">
          <a href="/signup" id="goTo" class="goTo">or ... don't have an account yet👀 ?</a>
      </div>
    </form>                
    </div>
    <script src="login_bundle.js"></script>
</body>
</html>