<%- include('../includes/head.ejs') %>
<title><%= pageTitle%></title>
</head>
<body>
    <div class="form__container">
    <div class="index__link">
        <a href="/">TO DO</a>
    </div>
    <p class="message">Let's make your day 👌🏻</p>
    <form action="/signIn" method="POST" id="sign__form">
        <div class="form__control">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="Enter Email" value=<%=oldInput.email %>>
            <small>Error Message</small>
        </div>
        <div class="form__control">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="Enter Password" value=<%=oldInput.password %>>
            <small>Error Message</small>
        </div>
        <% if(ErrorMessage.length >0) {%>
            <div class='error__message'><%=ErrorMessage%></div>
            <% } %>
        <div class="form__control">
            <input  type="hidden"  name="_csrf"  value="<%= csrfToken%>"  >
            <input type="submit" value="Submit" class="submit__btn">
        </div>
      <div class="move__link">
          <a href="/signup">or ... don't have an account yet👀 ?</a>
      </div>
    </form>                
    </div>
    <script src="sign_bundle.js"></script>
</body>
</html>